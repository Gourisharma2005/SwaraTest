<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="3.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">


<servlet>
    <servlet-name>UserLoginServlet</servlet-name>
    <servlet-class>com.swara.servlet.UserLoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserLoginServlet</servlet-name>
    <url-pattern>/userLogin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminLogin</servlet-name>
    <servlet-class>com.swara.servlet.AdminLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminLogin</servlet-name>
    <url-pattern>/adminLogin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SubmitComplaint</servlet-name>
    <servlet-class>com.swara.servlet.SubmitComplaintServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SubmitComplaint</servlet-name>
    <url-pattern>/submitComplaint</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserRegisterServlet</servlet-name>
    <servlet-class>com.swara.servlet.UserRegisterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserRegisterServlet</servlet-name>
    <url-pattern>/userRegister</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SubmitComplaintServlet</servlet-name>
    <servlet-class>com.swara.servlet.SubmitComplaintServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SubmitComplaintServlet</servlet-name>
    <url-pattern>/SubmitComplaintServlet</url-pattern>
  </servlet-mapping>


  <!-- View Complaint Servlet -->
  <servlet>
    <servlet-name>ViewComplaintServlet</servlet-name>
    <servlet-class>com.swara.servlet.ViewComplaintServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewComplaintServlet</servlet-name>
    <url-pattern>/ViewComplaintServlet</url-pattern>
  </servlet-mapping>

  <!-- Download Complaint PDF Servlet -->
  <servlet>
    <servlet-name>DownloadComplaintPDFServlet</servlet-name>
    <servlet-class>com.swara.servlet.DownloadComplaintPDFServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DownloadComplaintPDFServlet</servlet-name>
    <url-pattern>/DownloadComplaintPDFServlet</url-pattern>
  </servlet-mapping>


  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
